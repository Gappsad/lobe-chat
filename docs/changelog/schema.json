{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": false,
  "properties": {
    "$schema": {
      "type": "string",
      "format": "uri"
    },
    "community": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "date": {
            "type": "string",
            "pattern": "^\\d+-\\d+-\\d+$"
          },
          "id": {
            "type": "string"
          },
          "versionRange": {
            "type": "array",
            "items": {
              "type": "string",
              "pattern": "^\\d+\\.\\d+\\.\\d+$"
            },
            "minItems": 2,
            "maxItems": 2
          }
        },
        "required": ["id", "versionRange"],
        "additionalProperties": false
      }
    },
    "cloud": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "date": {
            "type": "string",
            "pattern": "^\\d+-\\d+-\\d+$"
          },
          "id": {
            "type": "string"
          },
          "versionRange": {
            "type": "array",
            "items": {
              "type": "string",
              "pattern": "^\\d+\\.\\d+\\.\\d+$"
            },
            "minItems": 2,
            "maxItems": 2
          }
        },
        "required": ["id", "versionRange"],
        "additionalProperties": false
      }
    }
  },
  "required": ["$schema", "community", "cloud"],
  "type": "object"
}
